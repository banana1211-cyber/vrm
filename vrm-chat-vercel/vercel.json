{
  "version": 2,
  "name": "vrm-chat-app",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30,
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai-api-key",
    "OPENAI_API_BASE": "@openai-api-base",
    "NIJIVOICE_API_KEY": "@nijivoice-api-key",
    "NIJIVOICE_CHARACTER_ID": "@nijivoice-character-id"
  }
}
